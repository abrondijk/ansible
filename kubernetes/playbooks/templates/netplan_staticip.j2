network:
  ethernets:
    eth0:
      match:
        macaddress: {{ hostvars[inventory_hostname].ansible_default_ipv4.macaddress }}
      set-name: eth0
      addresses:
      - {{ ansible_host }}/24
      routes:
      - to: default
        via: {{ v_gateway }}
      nameservers:
        addresses:
        - {{ v_dns }}
        search: []
  version: 2